{
  "name": "quick-rag",
  "version": "1.1.7",
  "description": "⚡ Quick RAG - Production-ready local AI with Ollama & LM Studio SDK integration + Document Loaders (PDF, Word, Excel) + Query Explainability + Dynamic Prompts + Decision Engine",
  "main": "src/index.node.js",
  "browser": "src/index.browser.js",
  "types": "src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "node": "./src/index.node.js",
      "browser": "./src/index.browser.js",
      "import": "./src/index.js",
      "default": "./src/index.node.js"
    },
    "./react": {
      "import": "./src/index.js",
      "default": "./src/index.js"
    }
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./test/run-tests.js",
    "start": "node ./example/run.js",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "rag",
    "quick-rag",
    "ollama",
    "lm-studio",
    "react",
    "local-ai",
    "vector-search",
    "retrieval-augmented-generation",
    "embeddings",
    "pdf",
    "document-loader",
    "pdf-parser",
    "word",
    "excel"
  ],
  "author": "Cihat Emre Karataş",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emredeveloper/quick-rag.git"
  },
  "homepage": "https://github.com/emredeveloper/quick-rag#readme",
  "bugs": {
    "url": "https://github.com/emredeveloper/quick-rag/issues"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lmstudio/sdk": "^1.5.0",
    "ollama": "^0.6.2"
  },
  "optionalDependencies": {
    "mammoth": "^1.8.0",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.4",
    "xlsx": "^0.18.5"
  }
}
