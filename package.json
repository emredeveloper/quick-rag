{
  "name": "quick-rag",
  "version": "2.1.1",
  "description": "Production-ready RAG (Retrieval-Augmented Generation) for JavaScript & React - Built on official Ollama & LM Studio SDKs",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "node": "./src/index.node.js",
      "browser": "./src/index.browser.js",
      "default": "./src/index.js"
    },
    "./react": {
      "types": "./src/react/index.d.ts",
      "default": "./src/react/index.js"
    }
  },
  "keywords": [
    "rag",
    "ollama",
    "lmstudio",
    "vector-store",
    "embeddings",
    "retrieval",
    "ai",
    "llm",
    "react",
    "local-ai",
    "vector-search",
    "retrieval-augmented-generation",
    "pdf",
    "document-loader",
    "pdf-parser",
    "word",
    "excel",
    "decision-engine",
    "query-explainability",
    "prompt-management",
    "streaming",
    "typescript",
    "semantic-search",
    "chatbot",
    "knowledge-base"
  ],
  "scripts": {
    "test": "node test/run-tests.js",
    "test:integration": "node test/run-integration.js",
    "build": "node build.js",
    "prepublishOnly": "npm run build && npm test",
    "version": "npm run build"
  },
  "author": "Cihat Emre Karata≈ü",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emredeveloper/quick-rag.git"
  },
  "homepage": "https://github.com/emredeveloper/quick-rag#readme",
  "bugs": {
    "url": "https://github.com/emredeveloper/quick-rag/issues"
  },
  "files": [
    "src/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lmstudio/sdk": "^1.5.0",
    "ollama": "^0.6.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.10.0",
    "mammoth": "^1.11.0",
    "node-fetch": "^3.3.2",
    "officeparser": "^5.2.1",
    "pdf-parse": "^1.1.4",
    "xlsx": "^0.18.5"
  }
}